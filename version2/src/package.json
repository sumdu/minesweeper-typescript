{
  "name": "minesweeper-ts",
  "version": "1.0.0",
  "description": "Minesweeper game that can be run in the client-side (browser)",
  "main": "src/index.ts",
  "license": "UNLICENSED",
  "scripts": {
    "build": "npx tsc && node ./build.js && cp -r -u ./static_files/* ./dist/",
    "build:gen-defs": "./node_modules/.bin/dts-bundle-generator --verbose -o dist/index.d.ts src/index.ts",
    "build:watch": "nodemon --watch src -e js,json,ts --exec \"yarn build\"",
    "start": "\"C:\\Program Files\\Google\\Chrome\\Application\\chrome.exe\" --disable-web-security --allow-file-access-from-files ."
  },
  "engines": {
    "node": ">=18.16.0 <19.0.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jquery": "^3.5.29",
    "dts-bundle-generator": "^9.5.1",
    "esbuild": "^0.20.2",
    "esbuild-plugin-tsc": "^0.4.0",
    "nodemon": "^3.1.0",
    "typescript": "^5.4.5"
  }
}
